<Window x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk ="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeChanged="Window_SizeChanged"
        >
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="125"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Image Name="canvas" Grid.Row="1" Stretch="Fill" MouseMove="canvas_MouseMove" MouseLeftButtonDown="canvas_MouseLeftButtonDown" MouseLeftButtonUp="canvas_MouseLeftButtonUp"></Image>
        <Grid Grid.Row="0" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
                <!--Название панельки-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <!--Инструменты-->
                <ColumnDefinition Width="200"></ColumnDefinition>
                <!--Фигуры-->
                <ColumnDefinition Width="100"></ColumnDefinition>
                <!--Толщина-->
                <ColumnDefinition Width="300"></ColumnDefinition>
                <!--Панель с выбором цвета-->
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">Инструменты</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Фигуры</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">Толщина</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">Цвет</TextBlock>
            
            <!--Инструментики-->
            <WrapPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Width="25" Height="25" Margin="3" Background="White" Click="PencilButton_Click" Content="Pencil"></Button>
                <Button Content="FP" Width="25" Height="25" Margin="3" Click="FigurePlacerButton_Click"></Button>
                <Button Content="L" Width="25" Height="25" Margin="3" Click="LinesButton_Click"></Button>
                <Button Content="4" Width="25" Height="25" Margin="3"></Button>
                <Button Content="5" Width="25" Height="25" Margin="3"></Button>
                <Button Content="6" Width="25" Height="25" Margin="3"></Button>
            </WrapPanel>

            <!--Выбор толщины-->
            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="0.3*"></RowDefinition>
                </Grid.RowDefinitions>
                <Slider Grid.Row="0" VerticalAlignment="Center" x:Name="WidthSlider" TickFrequency="1" Minimum="1" Maximum="50" TickPlacement="Both"></Slider>
                <TextBlock Grid.Row="1" VerticalAlignment="Center" x:Name="SliderValueArea" HorizontalAlignment="Center">1</TextBlock>
            </Grid>
            <!--Выбор цвета-->
            <Grid Grid.Row="0" Grid.Column="3" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                    <xctk:ColorPicker x:Name="ConturColorPicker" Width="50" Height="40" SelectedColorChanged="ConturColorPicker_SelectedColorChanged"></xctk:ColorPicker>
                    <xctk:ColorPicker x:Name="FillColorPicker" Width="50" Height="40" SelectedColorChanged="FillColorPicker_SelectedColorChanged"></xctk:ColorPicker>
                </StackPanel>
                
            </Grid>
            
            <!--Фигуры-->
            <WrapPanel x:Name="FigureTypes" Visibility="Hidden" Grid.Column="1" Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Width="55" Height="25" Margin="3" Background="White" Click="RectangleButton_Click">
                    R
                </Button>
                <Button Width="55" Height="25" Margin="3" Background="White" Click="EllipseButton_Click">
                    E
                </Button>
                <Button Width="55" Height="25" Margin="3" Background="White">
                </Button>
                <Button Width="55" Height="25" Margin="3" Background="White">
                </Button>
                <Button Width="55" Height="25" Margin="3" Background="White">
                </Button>
                <Button Width="55" Height="25" Margin="3" Background="White">
                </Button>
            </WrapPanel>

            <!--Выбор типа линии-->
            <WrapPanel x:Name="LinesTypes" Grid.Column="1" Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Width="55" Height="25" Margin="3" Background="White" Click="SimpeLineButton_Click">
                    Обычная
                </Button>
                <Button Width="55" Height="25" Margin="3" Background="White" Click="CurveLineButton_Click">
                    Кривая
                </Button>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
